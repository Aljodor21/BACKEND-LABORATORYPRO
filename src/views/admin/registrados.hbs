<!-- CONTENT -->
<section id="content">
  <!-- NAVBAR -->
  <nav class="flex justify-between">
    <div>
      <i class="bx bx-menu"></i>
      <a href="#" class="nav-link">Administrador</a>
    </div>

    <!--Necesario para el funcionamiento de la app, pero no se ve, por eso utiliza la clase hidden-->
    <form action="#" class="hidden">
      <div class="form-input">
        <input type="search" placeholder="Search..." />
        <button type="submit" class="search-btn">
          <i class="bx bx-search"></i>
        </button>
      </div>
    </form>

    <!--Imagen del navbar-->
    <div class="flex items-center gap-6">
      <input type="checkbox" id="switch-mode" hidden />
      <label for="switch-mode" class="switch-mode"></label>

      <a href="./userA.html" class="profile">
        <img src="/images/admin/people.png" />
      </a>
    </div>
  </nav>
  <!-- NAVBAR -->

  <!-- MAIN 1-->
  <main id="section1">
    <div class="head-title">
      <div class="left">
        <h1>Usuarios registrados</h1>
        <ul class="breadcrumb">
          <li>
            <a href="#">Administrador</a>
          </li>
          <li><i class="bx bx-chevron-right"></i></li>
          <li>
            <p class="text-bright-red">Usuarios registrados</p>
            <!--<a class="active" href="#"></a>-->
          </li>
        </ul>
      </div>
    </div>

    {{#if obj}}
      <div class="container w-auto h-auto mt-6">

        <div class="overflow-auto rounded-lg">

          <table class="w-full h-auto rounded-xl shadow-xl">

            <thead class="bg-gray-50 border-b-2 border-gray-200">
              <tr>
                <th
                  class="p-3 text-sm font-semibold tracking-wide text-left"
                >Nombre</th>
                <th
                  class="p-3 text-sm font-semibold tracking-wide text-left"
                >Correo</th>
                <th
                  class="p-3 text-sm font-semibold tracking-wide text-left"
                >Fecha Ingreso</th>
                <th
                  class="p-3 text-sm font-semibold tracking-wide text-left"
                >Tipo</th>
                <th
                  class="p-3 text-sm font-semibold tracking-wide text-left"
                >Estado</th>
                <th
                  class="p-3 text-sm font-semibold tracking-wide text-left"
                >Acciones</th>
              </tr>
            </thead>
            <tbody>
              {{#each obj}}
                <tr class="bg-white">
                  <td class="p-3 text-sm text-gray-700">{{nombre}} <br> {{papellido}}</td>
                  <td
                    class="p-3 text-sm text-gray-700"
                  >{{correo}}</td>
                  <td class="p-3 text-sm text-gray-700">{{timeago fecha_registro}}</td>
                  <td class="p-3 text-sm text-gray-700">{{codigo_tipo}}</td>
                  <td class="p-3 text-sm text-gray-700">{{codigo_estado}}</td>

                  <td class="p-3 font-bold flex gap-5">
                    <a href="/admin/editRegistrados/{{id_usuario}}" title="Editar"><i
                        class="hover:bg-orange-400 bx bx-edit-alt"
                      ></i></a>
                    <a href="/admin/eliminarRegistrado/{{id_usuario}}" title="Eliminar"><i class="hover:bg-red-400 bx bx-x"></i></a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    {{else}}
      <h3 class="text-2xl font-bold text-center p-6">No existen usuarios
        actualmente</h3>
    {{/if}}
  </main>
  <!-- MAIN -->
</section>
<!-- CONTENT -->