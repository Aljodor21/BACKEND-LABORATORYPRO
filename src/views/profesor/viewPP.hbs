<!-- CONTENT -->
<section id="content">
  <!-- NAVBAR -->
  <nav class="flex justify-between">
    <div>
      <i class="bx bx-menu"></i>
      <a href="#" class="nav-link">Docente</a>
    </div>

    <!--Necesario para el funcionamiento de la app, pero no se ve, por eso utiliza la clase hidden-->
    <form action="#" class="hidden">
      <div class="form-input">
        <input type="search" placeholder="Search..." />
        <button type="submit" class="search-btn">
          <i class="bx bx-search"></i>
        </button>
      </div>
    </form>

    <div class="flex items-center gap-6">
      <input type="checkbox" id="switch-mode" hidden />
      <label for="switch-mode" class="switch-mode"></label>

      <a href="/perfil" class="profile">
        <img src="/images/admin/people.png" />
      </a>
    </div>
  </nav>
  <!-- NAVBAR -->

  <!-- MAIN 1-->
  <main id="section1">
    <div class="head-title">
      <div class="left">
        <h1>Proyectos</h1>
        <ul class="breadcrumb">
          <li>
            <a href="#">Docente</a>
          </li>
          <li><i class="bx bx-chevron-right"></i></li>
          <li>
            <p class="text-bright-red">Visualizar Proyectos</p>
            <!--<a class="active" href="#"></a>-->
          </li>
        </ul>
      </div>
    </div>

    <div
      class="container bg-bright-red mx-auto shadow-2xl shadow-black flex flex-col justify-center justify-items-center content-center rounded-xl mt-2"
    >

      <h2 class="text-2xl font-bold text-center p-4">{{obj.nombre}}</h2>

      <div class="p-6">
        <label for="desc" class="text-xl font-semibold">Descripción del proyecto</label>
        <p id="desc" class="bg-white rounded-xl p-3">
          {{obj.introduccion}}
        </p>
      </div>

      {{#if obj2}}

        {{#each obj2}}
          <div class="p-6">
            <label for="desc" class="text-xl font-semibold">{{obj.length}}</label>
            <p id="desc" class="bg-white rounded-xl p-3">
              {{descripcion_avance}}
            </p>
          </div>
        {{/each}}
      {{else}}
        <h3 class="text-2xl font-bold text-center p-6">No existen avances
          actualmente</h3>
      {{/if}}

    </div>

  </main>
  <!-- MAIN -->
</section>
<!-- CONTENT -->