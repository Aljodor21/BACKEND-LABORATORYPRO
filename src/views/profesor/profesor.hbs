<!-- CONTENT -->
<section id="content">
  <!-- NAVBAR -->
  <nav class="flex justify-between">
    <div>
      <i class="bx bx-menu"></i>
      <a href="#" class="nav-link">Docente</a>
    </div>

    <!--Necesario para el funcionamiento de la app, pero no se ve, por eso utiliza la clase hidden-->
    <form action="#" class="hidden">
      <div class="form-input">
        <input type="search" placeholder="Search..." />
        <button type="submit" class="search-btn">
          <i class="bx bx-search"></i>
        </button>
      </div>
    </form>

    <div class="flex items-center gap-6">
      <input type="checkbox" id="switch-mode" hidden />
      <label for="switch-mode" class="switch-mode"></label>

      <a href="profesor.html" class="profile">
        <img src="/images/admin/people.png" />
      </a>
    </div>
  </nav>
  <!-- NAVBAR -->

  <!-- MAIN 1-->
  <main id="section1">
    <div class="head-title">
      <div class="left">
        <h1>Integrantes</h1>
        <ul class="breadcrumb">
          <li>
            <a href="#">Docente</a>
          </li>
          <li><i class="bx bx-chevron-right"></i></li>
          <li>
            <p class="text-bright-red">Integrantes</p>
            <!--<a class="active" href="#"></a>-->
          </li>
        </ul>
      </div>
    </div>

    <div class="table-data">

      <div class="order">
        <div class="head">
          <h3>Proyectos registrados</h3>
        </div>
        <table>
          {{#if obj}}
            <thead>
              <tr>
                <th>Proyecto</th>
                <th>Fecha Creación</th>
              </tr>
            </thead>
            <tbody>
              {{#each obj}}
                <tr>
                  <td>
                    <img src="/images/admin/people.png" />
                    <a class="hover:bg-bright-red" href="/profesor/asignar/{{id_proyecto}}">
                      <p>{{nombre_proyecto}}</p></a>
                  </td>
                  <td>{{timeago fecha_creacion}}</td>
                </tr>
              {{/each}}
            </tbody>
          {{else}}
            <h3 class="text-2xl font-bold text-center p-6">No existen proyectos
              actualmente</h3>
          {{/if}}
        </table>
      </div>

    </div>
  </main>
  <!-- MAIN -->
</section>
<!-- CONTENT -->