<!-- CONTENT -->
<section id="content">
  <!-- NAVBAR -->
  <nav class="flex justify-between">
    <div>
      <i class="bx bx-menu"></i>
      <a href="#" class="nav-link">Docente</a>
    </div>

    <!--Necesario para el funcionamiento de la app, pero no se ve, por eso utiliza la clase hidden-->
    <form action="#" class="hidden">
      <div class="form-input">
        <input type="search" placeholder="Search..." />
        <button type="submit" class="search-btn">
          <i class="bx bx-search"></i>
        </button>
      </div>
    </form>

    <!--Imagen del navbar-->
    <div class="flex items-center gap-6">
      <input type="checkbox" id="switch-mode" hidden />
      <label for="switch-mode" class="switch-mode"></label>

      <a href="/perfil" class="profile">
        <img src="/images/admin/people.png" />
      </a>
    </div>
  </nav>
  <!-- NAVBAR -->

  <!-- MAIN 1-->
  <main id="section1">
    <div class="head-title">
      <div class="left">
        <h1>Proyectos</h1>
        <ul class="breadcrumb">
          <li>
            <a href="#">Docente</a>
          </li>
          <li><i class="bx bx-chevron-right"></i></li>
          <li>
            <p class="text-bright-red">Retroalimentar proyecto</p>
            <!--<a class="active" href="#"></a>-->
          </li>
        </ul>
      </div>
    </div>

    <div
      class="container mx-auto bg-bright-red mt-6 rounded-xl shadow-2xl shadow-black flex flex-col justify-center sm:w-auto md:w-[50%]"
    >
      <h2 class="text-2xl font-bold text-center p-4">{{obj.nombre}}</h2>

      <div class="p-6 md:w-[80%] mx-auto">
        <label for="desc" class="text-xl font-semibold">Descripción del proyecto</label>
        <p id="desc" class="bg-white rounded-xl p-3">
          {{obj.introduccion}}
        </p>
      </div>

      <div class="p-6 md:w-[80%] mx-auto">
        <label for="desc" class="text-xl font-semibold">Descripción del avance</label>
        <p id="desc" class="bg-white rounded-xl p-3">
          {{obj2.descripcion_avance}}
        </p>
      </div>

      <form
        action="/profesor/retroalimentar/{{obj.id_proyecto}}/{{obj2.id_avance}}"
        method="POST"
        class="flex flex-col p-6 gap-4 md:w-[80%] mx-auto"
      >
        <label class="text-xl font-semibold" for="retro">Retroalimentación</label>
        <textarea
          id="retro"
          
          name="retroalimentacion"
          rows="6"
          class="block p-2 mb-4 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300"
          placeholder="Ingresa la retroalimentación del proyecto..."
          required
        >{{obj2.retroalimentacion}}</textarea>
        <button
          type="submit"
          class="w-full text-center py-2 rounded bg-dark-blue text-white hover:bg-dark-grayish-blue"
        >
          Actualizar
        </button>
      </form>
    </div>

  </main>
  <!-- MAIN -->
</section>
<!-- CONTENT -->