<!-- CONTENT -->
<section id="content">
  <!-- NAVBAR -->
  <nav class="flex justify-between">
    <div>
      <i class="bx bx-menu"></i>
      <a href="#" class="nav-link">Estudiante</a>
    </div>

    <!--Necesario para el funcionamiento de la app, pero no se ve, por eso utiliza la clase hidden-->
    <form action="#" class="hidden">
      <div class="form-input">
        <input type="search" placeholder="Search..." />
        <button type="submit" class="search-btn">
          <i class="bx bx-search"></i>
        </button>
      </div>
    </form>

    <!--Imagen del navbar-->
    <div class="flex items-center gap-6">
      <input type="checkbox" id="switch-mode" hidden />
      <label for="switch-mode" class="switch-mode"></label>

      <a href="./userA.html" class="profile">
        <img src="/images/admin/people.png" />
      </a>
    </div>
  </nav>
  <!-- NAVBAR -->

  <!-- MAIN 1-->
  <main id="section1">
    <div class="head-title">
      <div class="left">
        <h1>Proyectos</h1>
        <ul class="breadcrumb">
          <li>
            <a href="#">Estudiante</a>
          </li>
          <li><i class="bx bx-chevron-right"></i></li>
          <li>
            <p class="text-bright-red">Ver retroalimentación</p>
            <!--<a class="active" href="#"></a>-->
          </li>
        </ul>
      </div>
    </div>

    <div
      class="container mx-auto bg-bright-red mt-6 rounded-xl shadow-2xl shadow-black flex flex-col justify-center sm:w-auto md:w-[50%]"
    >
      <h2 class="text-2xl font-bold text-center p-4">{{obj.nombre}}</h2>

      <div class="p-6 md:w-[80%] mx-auto">
        <label for="desc" class="text-xl font-semibold">Descripción del proyecto</label>
        <p id="desc" class="bg-white rounded-xl p-3">
          {{obj.introduccion}}
        </p>
      </div>

      <div class="p-6 md:w-[80%] mx-auto">
        <label for="desc" class="text-xl font-semibold">Descripción del avance</label>
        <p id="desc" class="bg-white rounded-xl p-3">
          {{obj2.descripcion_avance}}
        </p>
      </div>

      {{#if obj2.retroalimentacion}}
        <div class="p-6 md:w-[80%] mx-auto">
          <label for="desc" class="text-xl font-semibold">Retroalimentación</label>
          <p id="desc" class="bg-white rounded-xl p-3">
            {{obj2.retroalimentacion}}
          </p>
        </div>
      {{else}}
        <h3 class="text-2xl font-bold text-center p-6">Aun no existe retroalimentación</h3>
      {{/if}}

    </div>

  </main>
  <!-- MAIN -->
</section>
<!-- CONTENT -->