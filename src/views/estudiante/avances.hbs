<!-- CONTENT -->
<section id="content">
  <!-- NAVBAR -->
  <nav class="flex justify-between">
    <div>
      <i class="bx bx-menu"></i>
      <a href="#" class="nav-link">Estudiante</a>
    </div>

    <!--Necesario para el funcionamiento de la app, pero no se ve, por eso utiliza la clase hidden-->
    <form action="#" class="hidden">
      <div class="form-input">
        <input type="search" placeholder="Search..." />
        <button type="submit" class="search-btn">
          <i class="bx bx-search"></i>
        </button>
      </div>
    </form>

    <div class="flex items-center gap-6">
      <input type="checkbox" id="switch-mode" hidden />
      <label for="switch-mode" class="switch-mode"></label>

      <a href="./userA.html" class="profile">
        <img src="/images/admin/people.png" />
      </a>
    </div>
  </nav>
  <!-- NAVBAR -->

  <!-- MAIN 1-->
  <main id="section1">
    <div class="head-title">
      <div class="left">
        <h1>Avances</h1>
        <ul class="breadcrumb">
          <li>
            <a href="#">Estudiante</a>
          </li>
          <li><i class="bx bx-chevron-right"></i></li>
          <li>
            <p class="text-bright-red">Avances</p>
            <!--<a class="active" href="#"></a>-->
          </li>
        </ul>
      </div>
    </div>

    <ul class="box-info">
      <li>
        <i class="bx bx-edit"></i>
        <span class="text">
          <p class="font-bold">Avances</p>
          <p>Debes hacer clic en la casilla de tu avance, para subirlo</p>
        </span>
      </li>
    </ul>

    <div class="table-data table-auto">
      <div class="order">

        <div class="head">
          <h3>Proyectos Asignados</h3>
        </div>
        {{#if proyectos}}
          <table>
            <thead>
              <tr>
                <th>Proyecto</th>
                <th>Avance uno</th>
                <th>Avance dos</th>
                <th>Avance tres</th>
              </tr>
            </thead>
            <tbody>
              {{#each proyectos}}
                <tr>
                  <td>
                    <p>{{nombre_proyecto}}</p>
                  </td>
                  <td>
                    <a href="/estudiante/subirA/{{id_proyecto}}/{{id}}/{{@index}}"><i
                        class="bx bx-checkbox"
                      ></i></a></td>
                  <td>
                    <a href="/estudiante/subirA/{{id_proyecto}}/{{id}}/{{@index}}"><i
                        class="bx bx-checkbox"
                      ></i></a></td>
                  <td>
                    <a href="/estudiante/subirA"><i
                        class="bx bx-checkbox"
                      ></i></a></td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        {{else}}
          <h3 class="text-2xl font-bold text-center p-6">No existen proyectos
            asignados actualmente</h3>
        {{/if}}
      </div>
    </div>
  </main>
  <!-- MAIN -->
</section>
<!-- CONTENT -->